@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Удаление пользователя";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы уверены, что хотите удалить этого пользователя?</h3>
<div>
    <h4>Пользователь</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            UserName
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>

    <form asp-action="DeleteUser">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Users">Назад к списку</a>
    </form>
</div>